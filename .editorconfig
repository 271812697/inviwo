# top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
[*]
end_of_line = lf
insert_final_newline = true
charset = utf-8

# 4 space indentation
indent_style = space
indent_size = 4
max_line_length = 100
trim_trailing_whitespace = true


[*]
spelling_languagess = en-us
spelling_exclusion_path = ./tools/inviwo.dict
